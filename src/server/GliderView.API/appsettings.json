{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "gliderView": "Data Source=home-server;Database=GliderView;Integrated Security=false;User ID=gliderViewer;Password=Passw0rd;Encrypt=true;TrustServerCertificate=true;"
  },
  "igcDirectory": ".\\igc",
  "flightBookApiUrl": "https://flightbook.glidernet.org/api",
  "NLog": {
    "throwConfigExceptions": true,
    "targets": {
      "async": true,
      "logfile": {
        "type": "File",
        "fileName": "logs/GliderView.API-${shortdate}.log"
      },
      "logconsole": {
        "type": "Console"
      }
    },
    "rules": [
      {
        "logger": "*",
        "minLevel": "Info",
        "writeTo": "logconsole"
      },
      {
        "logger": "*",
        "minLevel": "Debug",
        "writeTo": "logfile"
      }
    ]
  }
}
